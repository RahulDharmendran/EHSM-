<mvc:View controllerName="ehsmportal.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <Page id="loginPage" title="Safety Engineer Portal" showHeader="false" backgroundDesign="Standard">
        <l:FlexBox alignItems="Center" justifyContent="Center" height="100%" direction="Column" class="loginContainer">
            <core:Icon src="sap-icon://shield" size="4rem" color="#0a6ed1" class="sapUiSmallMarginBottom" />
            <Title text="Safety Engineer Login" level="H2" class="sapUiMediumMarginBottom titleColor"/>
            
            <VBox class="sapUiMediumMargin loginBox" width="300px">
                <Label text="Employee ID" design="Bold"/>
                <Input id="empIdInput" placeholder="Enter Employee ID (e.g., 00000001)" />
                <Label text="Password" design="Bold" class="sapUiSmallMarginTop"/>
                <Input id="passwordInput" type="Password" placeholder="Enter Password" />
                <Button text="Login" type="Emphasized" press=".onLoginPress" class="sapUiMediumMarginTop" width="100%" />
            </VBox>
        </l:FlexBox>
    </Page>
</mvc:View>
