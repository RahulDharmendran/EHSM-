<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog title="Risk Details" class="sapUiContentPadding">
        <content>
            <f:SimpleForm editable="false" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                <f:content>
                    <Label text="Risk ID" design="Bold"/>
                    <Text text="{RiskId}" />
                    
                    <Label text="Description" design="Bold"/>
                    <Text text="{RiskDescription}" />
                    
                    <Label text="Category" design="Bold"/>
                    <Text text="{RiskCategory}" />
                    
                    <Label text="Severity" design="Bold"/>
                    <ObjectStatus text="{RiskSeverity}" state="{= ${RiskSeverity} === 'High' ? 'Error' : ${RiskSeverity} === 'Medium' ? 'Warning' : 'Success' }"/>
                    
                    <Label text="Likelihood" design="Bold"/>
                    <Text text="{Likelihood}" />
                    
                    <Label text="Mitigation Measures" design="Bold"/>
                    <Text text="{MitigationMeasures}" />

                    <Label text="Plant" design="Bold"/>
                    <Text text="{Plant}" />
                    
                    <Label text="Identified Date" design="Bold"/>
                    <Text text="{path: 'RiskIdentificationDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' }}" />
                    
                    <Label text="Created By" design="Bold"/>
                    <Text text="{CreatedBy}" />
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Close" press=".onCloseRiskDialog"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
