<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog title="Incident Details" class="sapUiContentPadding">
        <content>
            <f:SimpleForm editable="false" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                <f:content>
                    <Label text="Employee ID" design="Bold"/>
                    <Text text="{incidentModel>EmployeeId}" />

                    <Label text="Incident ID" design="Bold"/>
                    <Text text="{incidentModel>IncidentId}" />
                    
                    <Label text="Plant" design="Bold"/>
                    <Text text="{incidentModel>Plant}" />

                    <Label text="Description" design="Bold"/>
                    <Text text="{incidentModel>IncidentDescription}" />
                    
                    <Label text="Category" design="Bold"/>
                    <Text text="{incidentModel>IncidentCategory}" />
                    
                    <Label text="Priority" design="Bold"/>
                    <ObjectStatus text="{incidentModel>IncidentPriority}" state="{= ${incidentModel>IncidentPriority} === 'High' ? 'Error' : ${incidentModel>IncidentPriority} === 'Medium' ? 'Warning' : 'Success' }"/>
                    
                    <Label text="Status" design="Bold"/>
                    <ObjectStatus text="{incidentModel>IncidentStatus}" state="{= ${incidentModel>IncidentStatus} === 'Open' ? 'Error' : 'Success' }"/>

                    <Label text="Date" design="Bold"/>
                    <Text text="{path: 'incidentModel>IncidentDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' }}" />
                    
                    <Label text="Time" design="Bold"/>
                    <Text text="{incidentModel>IncidentTime}" />
                    
                    <Label text="Created By" design="Bold"/>
                    <Text text="{incidentModel>CreatedBy}" />
                    
                    <Label text="Completion Date" design="Bold"/>
                    <Text text="{incidentModel>CompletionDateDisplay}" />

                    <Label text="Completion Time" design="Bold"/>
                    <Text text="{incidentModel>CompletionTime}" />
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Close" press=".onCloseIncidentDialog"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
